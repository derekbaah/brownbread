<% if !user_signed_in? %>
	  <div class="jumbotron">
	    <h1>Review the latest movies!!!</h1>
	    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
	  </div>
	<% end %>

	<div class="row">
	  <% @movies.each do |movie| %>
	    <div class="col-sm-6 col-md-3">
	      <div class="thumbnail">
	        <%= link_to image_tag(movie.picture_url, width: '100%'),movie if movie.picture.present? %>
	      </div>
	    </div>
	  <% end %>
	</div>